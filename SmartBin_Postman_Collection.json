					}
				},
				{
					"name": "View Usage Logs",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{bin_url}}/api/bins/usage-logs/",
							"host": ["{{bin_url}}"],
							"path": ["api", "bins", "usage-logs", ""]
