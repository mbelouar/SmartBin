							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"fill_level\": 75\n}"
						},
						"url": {
							"raw": "{{bin_url}}/api/bins/list/{{bin_id}}/update-fill-level/",
							"host": ["{{bin_url}}"],
							"path": ["api", "bins", "list", "{{bin_id}}", "update-fill-level", ""]
