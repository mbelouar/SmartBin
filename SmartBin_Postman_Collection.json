						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"user_qr_code\": \"SB-{{user_id}}\"\n}"
						},
						"url": {
							"raw": "{{bin_url}}/api/bins/list/{{bin_id}}/open/",
							"host": ["{{bin_url}}"],
							"path": ["api", "bins", "list", "{{bin_id}}", "open", ""]
